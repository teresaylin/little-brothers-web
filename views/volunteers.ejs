<!DOCTYPE html>
<html>
  <head>
    <title>Little Brothers Web</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  </head>
  <body>

    <% include partials/navbar_logged_in %>

    <div class="puddle-container">
      <form class="form-group puddle-form" action="/delete" method="post">
        <table>
          <tr>
            <td><label>Volunteer to delete</label></td>
            <td><input type="text" class="form-control" name="volunteer_name" placeholder="Volunteer name"></td>
          </tr>
          <tr>
            <td> <p class="warning"><%= message %></p></td>
          </tr>
        </table>
        <button class="btn btn-default" type="submit">Delete</button>
      </form>

      <table class="table table-striped col-md-4">
        <thead>
        <tr>
        <th>Volunteer Name</th>
        <th>Volunteer Phone Number</th>
        </tr>
        </thead>
        <tbody>
        <% volunteers.forEach(function(volunteer){ %>

            <tr>
                <td><%= volunteer.name %></td>
                <td><%= volunteer.phone %></td>
            </tr>

        <%  }) %>

        </tbody>
      </table>

    </div>

  </body>
</html>
